{
  "name": "reef-protocol",
  "private": true,
  "workspaces": [
    "protocol",
    "client",
    "directory"
  ],
  "scripts": {
    "build": "npm run build -w protocol && npm run build -w client && npm run build -w directory",
    "test": "vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "dev:directory": "npm run dev -w directory",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,json,yml,yaml}": "prettier --write",
    "*.{ts,js}": "eslint --fix"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.56.0",
    "vitest": "^3.0.0"
  }
}
